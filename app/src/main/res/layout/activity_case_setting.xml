            tools:ignore="RelativeOverlap" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="236dp"
            android:layout_marginRight="236dp"
            android:layout_marginBottom="11dp"
            android:text="@string/client_name"
            android:textColor="@android:color/tertiary_text_dark"
            android:textColorHighlight="@android:color/black"
            tools:ignore="RelativeOverlap" />

        <ImageView
            android:id="@+id/option8"
            android:layout_width="61dp"
            android:layout_height="45dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="39dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="33dp"
            android:contentDescription="@string/option"
            app:srcCompat="@drawable/ic_baseline_chevron_right_24" />

    </RelativeLayout>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="110dp"
        android:layout_height="20dp"
        android:text="@string/saved_messages"
        android:textColor="@android:color/black"
        android:textColorHighlight="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.053"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout3" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="110dp"
        android:layout_height="20dp"
        android:text="@string/case_notification"
        android:textColor="@android:color/black"
        android:textColorHighlight="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.053"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout2"
        app:layout_constraintVertical_bias="0.048" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="84dp"
        android:layout_height="41dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:textOff="@string/off"
        android:textOn="@string/on"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout2"
        tools:ignore="MissingConstraints" />

    <RelativeLayout
        android:id="@+id/relativeLayout4"
        android:layout_width="413dp"
        android:layout_height="61dp"
        android:layout_marginTop="12dp"
        android:background="#FDFDFD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="123dp"
            android:layout_height="29dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="274dp"
            android:layout_marginRight="274dp"
            android:layout_marginBottom="16dp"
            android:text="@string/bookmarks"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/option3"
            android:layout_width="54dp"
            android:layout_height="45dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="28dp"
            android:layout_marginRight="28dp"
            android:layout_marginBottom="10dp"
            android:contentDescription="@string/option"
            app:srcCompat="@drawable/ic_baseline_chevron_right_24" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="413dp"
        android:layout_height="61dp"
        android:layout_marginTop="12dp"
        android:background="#FDFDFD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout4">

        <TextView
            android:id="@+id/textView14"
            android:layout_width="174dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="219dp"
            android:layout_marginRight="219dp"
            android:layout_marginBottom="13dp"
            android:text="@string/pending_messages"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/option12"
            android:layout_width="54dp"
            android:layout_height="45dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="7dp"
            android:contentDescription="@string/option"
            app:srcCompat="@drawable/ic_baseline_chevron_right_24" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="139dp"
        android:layout_height="18dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="156dp"
        android:text="@string/message_notification"
        android:textColor="@android:color/darker_gray"
        android:textColorHighlight="@android:color/black"
        app:layout_constraintEnd_toStartOf="@+id/switch1"
        app:layout_constraintTop_toBottomOf="@+id/textView" />
</androidx.constraintlayout.widget.ConstraintLayout>