            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            tools:ignore="LabelFor" />

        <ImageView
            android:id="@+id/option9"
            android:layout_width="54dp"
            android:layout_height="45dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="27dp"
            android:layout_marginRight="27dp"
            android:layout_marginBottom="29dp"
            android:contentDescription="@string/option"
            app:srcCompat="@drawable/ic_baseline_chevron_right_24" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="179dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="219dp"
            android:layout_marginRight="219dp"
            android:layout_marginBottom="75dp"
            android:text="@string/case_description"
            android:textColor="@android:color/black"
            android:textColorHighlight="@android:color/black"
            android:textSize="18sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="407dp"
        android:layout_height="117dp"
        android:layout_marginTop="12dp"
        android:background="#FDFDFD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switch1">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="110dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="283dp"
            android:layout_marginRight="283dp"
            android:layout_marginBottom="85dp"
            android:text="@string/case_members"
            android:textColor="@android:color/black"
            android:textColorHighlight="@android:color/black" />

        <ImageView
            android:id="@+id/option5"
            android:layout_width="61dp"
            android:layout_height="45dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="249dp"
            android:layout_marginRight="249dp"
            android:layout_marginBottom="37dp"
            android:backgroundTint="#707076"
            android:contentDescription="@string/option"
            android:src="@drawable/avatar" />

        <ImageView
            android:id="@+id/option6"
            android:layout_width="61dp"
            android:layout_height="45dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="157dp"
            android:layout_marginRight="157dp"
            android:layout_marginBottom="37dp"
            android:contentDescription="@string/option"
            app:srcCompat="@drawable/avatar" />

        <ImageView
            android:id="@+id/option7"
            android:layout_width="61dp"
            android:layout_height="45dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="340dp"
            android:layout_marginRight="340dp"
            android:layout_marginBottom="36dp"
